{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowTerraformStateAccess",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetBucketLocation",
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucketVersions"
            ],
            "Resource": [
                "arn:aws:s3:::flow-ai-terraform-state-bucket",
                "arn:aws:s3:::flow-ai-terraform-state-bucket/*"
            ]
        },
        {
            "Sid": "AllowResourceDeployment",
            "Effect": "Allow",
            "Action": [
                "ec2:*", 
                "rds:*",
                "ssm:GetParameter" 
            ],
            "Resource": "*"
        }
    ]
}